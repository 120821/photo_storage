.image-preview {
  width: 100%;
  height: auto;
}

.image-info {
  margin-top: 10px;
}

.image-info h4 {
  margin: 0;
  font-size: 16px;
}

.image-info p {
  margin: 5px 0;
  font-size: 14px;
}


.image-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(330px, 1fr));
  grid-gap: 20px;
}

.image-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.suggestions-box {
  width: 100%;
  height: auto;
  background-color: white;
  display: none;
}
.suggestions {
  background: white;
  width: 312px;
  margin-left: -45px;
  border: 1px solid gray;
  color: gray;
}
.photo_new {
  margin: 0 auto;
  max-width: 1200px;
  background-image: url('/assets/star_sky.jpg');
  background-color: rgba(0, 0, 255, 0.5);
  height: 90vh;
  background-size: cover;
  background-repeat: no-repeat;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.photo_new h1 {
  color: white;
  text-align: center;
  margin-bottom: 20px;
}

.photo_new div {
  margin-bottom: 10px;
}

.photo_new label {
  color: white;
}

.photo_new input[type="text"],
.photo_new textarea,
.photo_new input[type="file"] {
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
}

.photo_new input[type="submit"] {
  background-color: #4CAF50;
  color: white;
  padding: 10px 20px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}
