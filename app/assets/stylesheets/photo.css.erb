.image-preview {
  width: 100%;
  height: auto;
}

.image-info {
  margin-top: 10px;
}

.image-info h4 {
  margin: 0;
  font-size: 16px;
}

.image-info p {
  margin: 5px 0;
  font-size: 14px;
}


.image-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(330px, 1fr));
  grid-gap: 20px;
}

.image-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}
